<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/login"
        android:id="@+id/imgLogin"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableEnd="@drawable/email"
        android:hint="@string/enter_your_email_address"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:id="@+id/main_activity_edtLoginEmail"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/lock"
        android:hint="@string/enter_your_password"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:id="@+id/main_activity_edtLoginPassword" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/login"
        android:ems="10"
        android:textStyle="bold"
        android:background="#6666ff"
        android:id="@+id/main_activity_btnLogin"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/signup"
        android:ems="10"
        android:textStyle="bold"
        android:background="#00f9ff"
        android:id="@+id/main_activity_btnSignup"/>

</LinearLayout>