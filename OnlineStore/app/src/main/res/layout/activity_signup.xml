<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/signup" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableEnd="@drawable/email"
        android:hint="@string/enter_your_email_address"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:id="@+id/signup_activity_edtLoginEmail"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/username"
        android:hint="@string/enter_username"
        android:ems="10"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:id="@+id/signup_activity_edtSignupUsername" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableEnd="@drawable/lock"
        android:hint="@string/enter_password"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:id="@+id/signup_activity_edtSignupPassword"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/confirm_password"
        android:hint="@string/confirm_password"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:id="@+id/signup_activity_edtSignupConfirmPassword" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/signup"
        android:ems="10"
        android:textStyle="bold"
        android:background="#00f9ff"
        android:id="@+id/signup_activity_btnSignup"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/login"
        android:ems="10"
        android:textStyle="bold"
        android:background="#6666ff"
        android:id="@+id/signup_activity_btnLogin"/>

</LinearLayout>